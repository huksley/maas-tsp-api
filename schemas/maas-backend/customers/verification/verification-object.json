{
  "$id": "http://maasglobal.com/maas-backend/customers/verification/verification-object.json",
  "description": "MaaS verification schema",
  "definitions": {
    "verification": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255,
          "description": "Unique ID"
        },
        "identityId": {
          "$ref": "../../../../schemas/core/components/units.json#/definitions/identityId"
        },
        "details": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string"
            },
            "sessionToken": {
              "type": "string"
            }
          },
          "required": ["url", "sessionToken"],
          "additionalProperties": true
        },
        "validFrom": {
          "type": "string"
        },
        "validTo": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "stateLog": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string"
              },
              "timestamp": {
                "$ref": "../../../../schemas/core/components/units.json#/definitions/time"
              }
            },
            "required": ["status", "timestamp"]
          }
        },
        "created": {
          "$ref": "../../../../schemas/core/components/units.json#/definitions/time"
        },
        "modified": {
          "$ref": "../../../../schemas/core/components/units.json#/definitions/time"
        },
        "agencyId": {
          "$ref": "../../../../schemas/core/components/common.json#/definitions/agencyId"
        }
      },
      "required": ["id", "identityId", "details", "status", "type", "stateLog"]
    }
  }
}
